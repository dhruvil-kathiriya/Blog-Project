<%- include("header") %>

    <!-- MAIN CONTENT-->
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="card ">
                            <div class="card mb-0">
                                <h5 class="card-header">Profile Details</h5>
                                <!-- Account -->
                                <div class="card-body d-flex">
                                    <div class="col col-md-3">
                                        <img src="<%= locals.user.adminImage%>" alt="user-avatar"
                                            class="d-block rounded me-3" height="100" width="100" id="uploadedAvatar" />

                                    </div>
                                    <div class="col col-md-6">
                                        <a href="/admin/updateAdminData/<%= locals.user.id%>" class="btn btn-primary">
                                            Edit Profile
                                        </a>
                                    </div>
                                </div>
                                <hr class="my-0" />
                                <div class="card-body">
                                    <form id="formAccountSettings" method="POST" onsubmit="return false">
                                        <div class="row">
                                            <div class="mb-3 col-md-12">
                                                <label for="firstName" class="form-label">First Name :</label>
                                                <%= locals.user.name%>
                                            </div>
                                            <div class="mb-3 col-md-12">
                                                <label for="email" class="form-label">E-mail :</label>
                                                <%= locals.user.email%>
                                            </div>
                                            <div class="mb-3 col-md-12">
                                                <label for="email" class="form-label">Gender :</label>
                                                <%= locals.user.gender%>
                                            </div>
                                            <div class="mb-3 col-md-12">
                                                <label for="email" class="form-label">City :</label>
                                                <%= locals.user.city%>
                                            </div>
                                            <div class="mb-3 col-md-12">
                                                <label for="email" class="form-label">Hobby :</label>
                                                <%= locals.user.hobby%>
                                            </div>
                                            <div class="mb-3 col-md-12">
                                                <label for="email" class="form-label">Description :</label>
                                                <%= locals.user.description%>
                                            </div>
                                            <!-- <div>
                                                <a href="/admin/updateAdminData/<%= locals.user.id%>"
                                                    class="bg-success text-white p-2 h5"><i class="zmdi zmdi-edit">Edit
                                                        Profile</i></a>
                                            </div> -->
                                        </div>

                                </div>
                            </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
    </div>
    <%- include("footer") %>